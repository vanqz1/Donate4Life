@model Donate4Life.Models.Donor
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Donate4Life</title>

    <!-- Bootstrap Core CSS -->
    <link href="/css/bootstrap.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="/css/stylish-portfolio.css" rel="stylesheet">

    <link href="/css/login.css" rel="stylesheet">
    <link href="/css/donor_details.css" rel="stylesheet">
    <link href="/css/view_donor_admin.css" rel="stylesheet">
    <link href="/css/edit_donor.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700,300italic,400italic,700italic" rel="stylesheet"
          type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>

    <!-- Navigation -->
    <a id="menu-toggle" href="#" class="btn btn-dark btn-lg toggle"><i class="fa fa-bars"></i></a>
    @Html.Partial("~/Views/Partials/SideBar.cshtml");

    <!-- Header -->
    <section id="donor_top"></section>

    <section id="donor" class="donor">

        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Редактиране на донор</h2>
                </div>
            </div>
            <div class="row main_row">

                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad">


                    <div class="panel panel-info">
                        <div class="panel-heading">
                            <h3 class="panel-title">Донор<span></span></h3>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-3 col-lg-3 " align="center"> <img alt="User Pic" src="/img/logo_min.png" class="img-circle img-responsive"> </div>

                                <div class=" col-md-9 col-lg-9 ">
                                    @using (Html.BeginForm("EditDonor1", "Donor"))
                                    {
                                        <table class="table table-user-information">

                                            <tbody>
                                                <tr>
                                                    @Html.HiddenFor(model => model.Id,Model.Id)
                                                    <td>Години:</td>
                                                    <td>
                                                        @Html.EditorFor(model => model.Age, new { htmlAttributes = new { @class = "form-control", @style = "font-size: 14px;" } })
                                                        @Html.ValidationMessageFor(model => model.Age, "", new { @class = "text-danger" })
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>Населено място:</td>
                                                    <td>
                                                        @Html.EditorFor(model => model.Town, new { htmlAttributes = new { @class = "form-control", @style = "font-size: 14px;" } })
                                                        @Html.ValidationMessageFor(model => model.Town, "", new { @class = "text-danger" })
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>Височина:</td>
                                                    <td>
                                                        @Html.EditorFor(model => model.Height, new { htmlAttributes = new { @class = "form-control", @style = "font-size: 14px;" } })
                                                        @Html.ValidationMessageFor(model => model.Height, "", new { @class = "text-danger" })
                                                    </td>
                                                </tr>

                                                <tr>
                                                <tr>
                                                    <td>Килограми:</td>
                                                    <td>
                                                        @Html.EditorFor(model => model.Kilous, new { htmlAttributes = new { @class = "form-control", @style = "font-size: 14px;" } })
                                                        @Html.ValidationMessageFor(model => model.Kilous, "", new { @class = "text-danger" })
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>Цвят на очите:</td>
                                                    <td>
                                                        @Html.DropDownListFor(model => model.EyeColor, new SelectList(Model.listEyeColor),Model.EyeColor, new { @class = "form-control", @style = "font-size: 14px;" })

                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>Цвят на косата:</td>
                                                    <td>
                                                        @Html.DropDownListFor(model => model.HairColor, new SelectList(Model.listHairColor),Model.HairColor, new { @class = "form-control", @style = "font-size: 14px;" })

                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>Допълнителна информация:</td>
                                                    <td>
                                                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @style = "font-size: 14px;" } })
                                                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                        @Html.ValidationSummary(true, null, new { @class = "text-danger" });
                                        if (TempData["successEditDonor"] != null)
                                        {
                                            <div style="color: green;"> Промените са запазени успешно! </div>
                                        }

                                        if (TempData["successDeleteDonor"] != null)
                                        {
                                            <div style="color: green;"> Донорът е изтрит успешно! </div>
                                        }

                                        if (TempData["errorDeleteDonor"] != null)
                                        {
                                            <div style="color: red;"> Донорът не може да бъде изтрит! </div>
                                        }
                                        <input type="submit" name="register-submit" id="register-submit" tabindex="4" class="btn btn-primary" value="Запази промените">
                                        <a href="/Home/Index" class="btn btn-primary">Отказ</a>
                                    }
                                </div>

                            </div>
                        </div>
                        <div class="panel-footer">
                               @Html.ActionLink("Изтрий донора","DeleteDonor", "Donor", new { id = Model.Id }, null)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Footer -->
    <footer>
        <div class="container" id="footer">
            <div class="row">
                <div class="col-lg-10 col-lg-offset-1 text-center">
                    <h4>
                        <strong>Donate4Life</strong>
                    </h4>
                    <br>
                    <ul class="list-inline">
                        <li>
                            <a href="#"><i class="fa fa-facebook fa-fw fa-3x"></i></a>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-twitter fa-fw fa-3x"></i></a>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-dribbble fa-fw fa-3x"></i></a>
                        </li>
                    </ul>
                    <hr class="small">
                    <p class="text-muted">Copyright &copy; Donate4Life 2017</p>
                </div>
            </div>
        </div>
        <a id="to-top" href="#top" class="btn btn-dark btn-lg"><i class="fa fa-chevron-up fa-fw fa-1x"></i></a>
    </footer>

    <!-- jQuery -->
    <script src="/js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="/js/bootstrap.min.js"></script>
</body>

</html>